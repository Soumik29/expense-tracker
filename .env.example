## ===========================================
## LOCAL DEVELOPMENT (Docker + Local MySQL)
## ===========================================

# MySQL Docker Container Settings
MYSQL_ROOT_PASSWORD="ROOT_MYSQL_PASSWORD"
MYSQL_DATABASE="expense_tracker"
MYSQL_USER="MYSQL_USERNAME"
MYSQL_PASSWORD="MYSQL_PASSWORD"

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# JWT Authentication Secrets
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
AUTH_SECRET="AUTH_SECRET_CODE"
AUTH_SECRET_EXPIRES_IN="15m"
AUTH_REFRESH_SECRET="AUTH_REFRESH_SECRET_CODE"
AUTH_REFRESH_SECRET_EXPIRES_IN="7d"

# Database Connection (Local Docker)
DATABASE_URL="mysql://MYSQL_USER:MYSQL_PASSWORD@localhost:3306/expense_tracker"

