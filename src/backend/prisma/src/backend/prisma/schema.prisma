generator client {
  provider = "prisma-client-js"
  output   = "src/backend/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Expense {
  id          BigInt   @id @default(autoincrement())
  amount      Int
  date        DateTime
  category    Category
  description String?
}

enum Category {
  Food
  Groceries
  Mobile_Bill
  Travel
  Shopping
  Games
  Subscription
  EMI
}
