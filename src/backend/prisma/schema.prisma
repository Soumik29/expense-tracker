generator client{
    provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
}

model Expense{
  id          Int         @id         @default(autoincrement())
  amount      Decimal                    @db.Decimal(10, 2)    
  date        DateTime       
  category    Category       
  description String?
}

model User{
  id        Int     @id @default(autoincrement())
  username     String @unique
  password String
}

enum Category{
  Food
  Groceries
  Mobile_Bill
  Travel
  Shopping
  Games
  Subscription
  EMI
}

