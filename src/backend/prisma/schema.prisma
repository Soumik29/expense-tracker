generator client{
    provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
}

model Expense{
  id          Int         @id         @default(autoincrement())
  amount      Float                    @db.Decimal(10, 2)    
  date        DateTime       
  category    Category       
  description String?
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
}

model User{
  id           Int        @id @default(autoincrement())
  username     String     @unique
  password     String
  name         String?
  createdAt    DateTime   @default(now())
  expenses     Expense[]
}

enum Category{
  Food
  Groceries
  Mobile_Bill
  Travel
  Shopping
  Games
  Subscription
  EMI
}

